<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true">

    <data>
        <variable
            name="homeStatistic"
            type="com.mobile.sportology.models.football.FixtureById.Response.Statistic.StatisticData" />

        <variable
            name="awayStatistic"
            type="com.mobile.sportology.models.football.FixtureById.Response.Statistic.StatisticData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_statistic_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/home_text_background"
                android:gravity="center"
                android:text="@{homeStatistic.value}"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@{homeStatistic.type}"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/away_statistic_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/away_text_background"
                android:gravity="center"
                android:text="@{awayStatistic.value}"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginEnd="2.5dp"
                android:rotation="180"
                app:indicatorColor="@color/holo_green_light"
                app:trackColor="@color/AntiqueWhite"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_away"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="2.5dp"
                android:layout_height="match_parent"
                app:indicatorColor="@color/LightSlateGray"
                app:trackColor="@color/AntiqueWhite"/>
        </LinearLayout>
    </LinearLayout>
</layout>